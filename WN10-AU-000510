.USAGE
    Put any usage instructions here.
    Example syntax:
    PS C:\> .\__remediation_template( WN10-AU-000510).ps1 
#>

# Run PowerShell as Administrator


$KeyPath =  "HKLM:SOFTWARE\Policies\Microsoft\Windows\EventLog\System\"

#create the path if its not there 
if (-not (Test-Path $Keypath)) {
    New-Item -Path $KeyPath -Force| Out-Null
}

# add the registry key and  ensure System  event log size must be configured to 32768 KB or greater.

Set-ItemProperty -Path $KeyPath -Name "MaxSize"  -Value 0x00008000 -Type Dword

#conirm the change by getting the registry key 

Get-ItemProperty -Path $KeyPath | Select-Object MaxSize
  
