# Run PowerShell as Administrator



$KeyPath =  "HKLM:\SOFTWARE\Microsoft\Windows\CurrentVersion\Policies\System\Audit\"

#create the path if its not there 
if (-not (Test-Path $Keypath)) {
    New-Item -Path $KeyPath -Force| Out-Null
}

# add the registry key and  ensure Command line data must be included in process creation events.

Set-ItemProperty -Path $KeyPath -Name "ProcessCreationIncludeCmdLine_Enabled"  -Value 1 -Type Dword

#conirm the change by getting the registry key 

Get-ItemProperty -Path $KeyPath | Select-Object ProcessCreationIncludeCmdLine_Enabled
 
 
