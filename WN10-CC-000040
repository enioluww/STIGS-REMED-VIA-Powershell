# Run PowerShell as Administrator


$KeyPath =  "HKLM:\SOFTWARE\Policies\Microsoft\Windows\LanmanWorkstation\"

#create the path if its not there 
if (-not (Test-Path $Keypath)) {
    New-Item -Path $KeyPath -Force| Out-Null
}

# add the registry key and  ensure AllowInsecureGuestAuth log size must be configured to o

Set-ItemProperty -Path $KeyPath -Name "AllowInsecureGuestAuth"  -Value 0x00000000  -Type Dword

#conirm the change by getting the registry key 

Get-ItemProperty -Path $KeyPath | Select-Object AllowInsecureGuestAuth
  
