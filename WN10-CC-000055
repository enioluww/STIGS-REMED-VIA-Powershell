# Run PowerShell as Administrator


# Define registry path
$KeyPath = "HKLM:\SOFTWARE\Policies\Microsoft\Windows\WcmSvc\GroupPolicy"

# Create the registry path if it doesn't exist
if (-not (Test-Path $KeyPath)) {
    New-Item -Path $KeyPath -Force | Out-Null
}

# Check if fMinimizeConnections exists
if (-not (Get-ItemProperty -Path $KeyPath -Name "fMinimizeConnections" -ErrorAction SilentlyContinue)) {
    # Create the registry value if missing
    New-ItemProperty -Path $KeyPath -Name "fMinimizeConnections" -Value 3 -PropertyType DWord | Out-Null
} else {
    # Update the registry value if it already exists
    Set-ItemProperty -Path $KeyPath -Name "fMinimizeConnections" -Value 3
}

# Confirm the change
Get-ItemProperty -Path $KeyPath | Select-Object fMinimizeConnections
 
