$paths = "HKLM:\SOFTWARE\Microsoft\Windows\CurrentVersion\CapabilityAccessManager\ConsentStore\webcam"

if( -not (Test-Path($paths))){
    New-Item $paths
}

Set-ItemProperty -Path $paths -Name "Value" -Value "Deny"
 
