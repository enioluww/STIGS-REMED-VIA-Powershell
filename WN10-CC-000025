$path = "HKLM:\SYSTEM\CurrentControlSet\Services\Tcpip\Parameters\"


if( -not (Test-Path $path)){

    New-Item -Path $path -Force | Out-Null
}

Set-ItemProperty -Path $path -Name "DisableIPSourceRouting" -Value 2  -Type Dword 

Write-Output " The system must be configured to prevent IP source routing. "

Get-ItemPropertyValue -Path $path -Name "DisableIPSourceRouting" 
